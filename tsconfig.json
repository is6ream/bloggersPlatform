{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["express", "jest", "node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

  },
  "include": [
    "src/**/*",
    "tests",
    "__tests__/integration_test/auth.service.test.spec.ts"
  ],
  "exclude": ["__tests__", "dist", "node_modules"],
  "files": ["src/core/types/authorization/index.d.ts"]
}
